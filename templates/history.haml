{% extends "base.html" %}
{% block title %}{{ article.title|striptags }}{% endblock %}
{% block content %}
.container
  %h1
    <a href="{{ SITEURL }}/{{ article.url }}" rel="bookmark" title="Permalink to {{ article.title|striptags }}">{{ article.title }}</a>
  %h4
    Revision log
  {% for commit in gitcommits %}
  <h4>Commit {{commit.hash}}</h4>
  <p>{{commit.date}}</p>
  <h6>Commit message:</h6>
  <pre class="codehilite">{{commit.message|e}}</pre>
  <h6>{% if loop.first %}Original content:{%else%}Diff:{% endif %}</h6>
  {{commit.content}}
  {% endfor %}
.prefooter
  .container
    %h2 Revision log
    %p
      You are looking at the revision log of "<a href="{{SITEURL}}/{{article.save_as}}">{{article.title}}</a>".
    %p
      Created on {{ article.locale_date }}{% if article.locale_date != article.locale_update %} and last updated on {{ article.locale_update }}{%endif%}.
    %p
      <a class="ym-button ym-next" href="{{SITEURL}}/{{article.save_as}}">Back</a>
{% endblock %}
