{% extends "base.html" %}
{% block title %}{{ article.title|striptags }}{% endblock %}
{% block content %}
.container
  %h1
    <a href="{{ SITEURL }}/{{ article.url }}" rel="bookmark" title="Permalink to {{ article.title|striptags }}">{{ article.title }}</a>
  %h4 Source code
  {% import 'translations.html' as translations with context %}
  {{ translations.translations_for(article) }}
  <pre class="codehilite">{{source}}</pre>
.prefooter
  .container
    <h2>Markdown source</h2>
    %p
      You are looking at the latest markdown source of "<a href="{{SITEURL}}/{{article.save_as}}">{{article.title}}</a>".
    %p
      Created on {{ article.locale_date }}{% if article.locale_date != article.locale_update %} and last updated on {{ article.locale_update }}{%endif%}.
    %p
      This is the revision <a href="{{article.change_link}}">{{article.commits|length}}</a> of this source.
    %p
      <a class="ym-button ym-next" href="{{SITEURL}}/{{article.save_as}}">Back</a>
{% endblock %}
